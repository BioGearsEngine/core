      biogears::filesystem::create_directories((working_dir / path).parent_path());
      output.open( working_dir / path, std::fstream::binary | std::fstream::out);
      if (output.good() && !output.is_open()) {
        return false;
      }
      output.write(content, content_size);
      output.close();
