  size_t find_xsd_file(const char* file, const char* root, char* buffer, size_t buffer_length)
  { 
    size_t content_size = 0;
    biogears::filesystem::path test_location { file };
    if (test_location.exists() && test_location.is_file()) {
      std::ifstream xsd_file { test_location.str(), std::ios::in };
      if (xsd_file.is_open()) {
        xsd_file.seekg(0, xsd_file.end);
        content_size = xsd_file.tellg();
        xsd_file.seekg(0, xsd_file.beg);
      }
      if (content_size < buffer_length) {
        xsd_file.read(buffer, content_size);
        return content_size;
      }
    }

    test_location = root;
    test_location /= file;
    if (test_location.exists() && test_location.is_file()) {
      std::ifstream xsd_file { test_location.str(), std::ios::in };
      if (xsd_file.is_open()) {
        xsd_file.seekg(0, xsd_file.end);
        content_size = xsd_file.tellg();
        xsd_file.seekg(0, xsd_file.beg);
        if (content_size < buffer_length) {
          xsd_file.read(buffer, content_size);
          return content_size;
        }
      }
    }

    @FIND_XSD_FILE@

    return content_size;
  }
